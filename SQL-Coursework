CREATE TABLE Member ( 
  MEMBERID INTEGER(10), 
  Name VARCHAR(40), 
  Age INTEGER(2), 
  WEIGHT INTEGER(3),
  PRIMARY KEY (MEMBERID)
); 

CREATE TABLE Fighter( 
  MEMBERID INTEGER(10), 
  NumberOfFights INTEGER(4), 
  TotalPoints INTEGER(4),
  PRIMARY KEY (MEMBERID),
  FOREIGN KEY (MEMBERID) REFERENCES Member(MEMBERID) 
); 

CREATE TABLE Coach( 
  MEMBERID INTEGER(10), 
  Level INTEGER(1), 
  PRIMARY KEY (MEMBERID),
  FOREIGN KEY (MEMBERID) REFERENCES Member(MEMBERID) 
); 

CREATE TABLE TrainingSession ( 
  SESSIONID INTEGER(10), 
  DateOfSession INTEGER(6), 
  Difficulty VARCHAR(6),
  MEMBERID INTEGER(10),
  PRIMARY KEY (SESSIONID),
  FOREIGN KEY (MEMBERID) REFERENCES Coach (MEMBERID) 
); 

CREATE TABLE Fight ( 
  FIGHTID INTEGER(10), 
  DateOfFight INTEGER(6), 
  WinnerOfFight INTEGER(10), 
  LoserOfFight INTEGER(10),
  SESSIONID INTEGER(10),
  PRIMARY KEY (FIGHTID),
  FOREIGN KEY (WinnerOfFight) REFERENCES Member(MEMBERID),
  FOREIGN KEY (LoserOfFight) REFERENCES Member(MEMBERID),
  FOREIGN KEY (SESSIONID) REFERENCES TrainingSession(SESSIONID) 
); 
